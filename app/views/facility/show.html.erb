
<div class="page-header">
  <h1><%= @facility.name %></h1>
  <h4>Current Patients</h4>
</div>

<table class="table table-striped">
  <tr>
  <th>MR No.</th>
  <th>Name</th>
  <th>DOB</th>
  <th>Admission Date</th>
  <th>Actions</th>
  </tr>
<% @facility.patients.each do |patient| %>
  <tr>
  <td><%= patient.mr %></td>
  <td><%= patient.formal_name %></td>
  <td><%= patient.dob.to_date %></td>
  <td><%= patient.admission.date%></td>
  <td><%= link_to "Transfer Form", transfer_facility_patient_path(@facility, patient)%></td>
  </tr>
<% end %>
</table>